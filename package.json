{
  "name": "clojulator",
  "version": "1.0.0",
  "description": "A calculator application implmented in Reframe",
  "scripts": {
    "watch": "npx shadow-cljs watch client",
    "release": "npx shadow-cljs release client",
    "tailwind:build": "tailwindcss -i ./src/clojulator/web/css/app.css -o ./resources/public/app.css",
    "tailwind:watch": "tailwindcss -i ./src/clojulator/web/css/app.css -o ./resources/public/app.css --watch"
  },
  "devDependencies": {
    "shadow-cljs": "^2.28.17",
    "tailwindcss": "^3.4.14"
  }
}
